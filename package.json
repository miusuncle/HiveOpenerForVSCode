{
    "name": "hive-opener",
    "displayName": "Hive Opener",
    "description": "Quickly open file, directory and url",
    "version": "0.0.1",
    "publisher": "miusuncle",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:hiveOpener.showOpenList",
        "onCommand:hiveOpener.manageOpenList",
        "onCommand:hiveOpener.openConfigFile"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "hiveOpener.showOpenList",
                "title": "Hive Opener: Show Open List"
            },
            {
                "command": "hiveOpener.manageOpenList",
                "title": "Hive Opener: Manage Open List"
            },
            {
                "command": "hiveOpener.openConfigFile",
                "title": "Hive Opener: Open Config File"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Hive Opener Configuration",
            "properties": {
                "hiveOpener.configFileLocation": {
                    "type": "string",
                    "default": "",
                    "description": "Indicates an alternative location where the `hive-opener.json` file is stored"
                }
            }
        },
        "keybindings": [
            {
                "command": "hiveOpener.showOpenList",
                "key": "alt+ctrl+o"
            },
            {
                "command": "hiveOpener.manageOpenList",
                "key": "alt+ctrl+i"
            },
            {
                "command": "hiveOpener.openConfigFile",
                "key": "alt+shift+i"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "@types/node": "^6.0.40"
    }
}